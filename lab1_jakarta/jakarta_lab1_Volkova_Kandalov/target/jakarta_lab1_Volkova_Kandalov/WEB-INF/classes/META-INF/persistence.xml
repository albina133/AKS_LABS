<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="3.0"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="jakarta_lab1PU" transaction-type="JTA">
        <!-- DataSource -->
        <jta-data-source>jdbc/jakarta_lab1DS</jta-data-source>

        <!-- классы сущностей -->
        <class>com.volkova.kandalov.entity.Student</class>
        <class>com.volkova.kandalov.entity.Course</class>

        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
        </properties>
    </persistence-unit>

</persistence>
